generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // <--- МЫ ИЗМЕНИЛИ ЭТУ СТРОКУ
}

// === Наши модели ===

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  fullName String
  orders   Order[]
}

model Order {
  id        Int     @id @default(autoincrement())
  item      String
  price     String
  status    String
  owner     User    @relation(fields: [ownerId], references: [id])
  ownerId   Int
}